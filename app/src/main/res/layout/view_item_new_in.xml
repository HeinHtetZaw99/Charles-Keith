<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="260dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/basic10"
    android:layout_marginEnd="@dimen/basic5">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/upper_frame"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/item_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/shoe" />

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/basic20"
                android:layout_marginTop="@dimen/basic10"
                android:background="#afa"
                android:paddingEnd="@dimen/basic10"
                android:paddingStart="@dimen/basic10"
                android:text="New"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/upper_frame"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Ordinary Shoe"
            android:textColor="@color/colorPrimaryDark" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>