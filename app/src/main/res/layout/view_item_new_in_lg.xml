<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="330dp"
    android:layout_marginEnd="@dimen/basic50"
    android:layout_marginStart="@dimen/basic50"
    app:layout_anchorGravity="center_horizontal">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/upper_frame"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/item_picture_lg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/shoe" />

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_marginTop="@dimen/basic50"
                android:background="@color/colorPrimary"
                android:paddingEnd="@dimen/basic10"
                android:paddingStart="@dimen/basic10"
                android:text="New"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_name_lg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/upper_frame"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Ordinary Shoe"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_md" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>